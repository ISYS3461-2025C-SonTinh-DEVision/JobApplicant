{
  "info": {
    "name": "JobApplicant Company API (JM Integration)",
    "_postman_id": "company-jm-api-collection",
    "description": "API endpoints for accessing companies from Job Manager system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "companyId",
      "value": "",
      "type": "string"
    },
    {
      "key": "accountId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Company Search",
      "item": [
        {
          "name": "Get All Companies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jm/company?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jm", "company"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10)"
                }
              ]
            },
            "description": "Retrieve paginated list of companies from JM system"
          },
          "response": []
        },
        {
          "name": "Search Companies by Name",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jm/company?search=Tech&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jm", "company"],
              "query": [
                {
                  "key": "search",
                  "value": "Tech",
                  "description": "Search term for company name"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Search companies by name with pagination"
          },
          "response": []
        },
        {
          "name": "Filter Companies by Country",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jm/company?country=Vietnam&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jm", "company"],
              "query": [
                {
                  "key": "country",
                  "value": "Vietnam",
                  "description": "Filter by country"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Filter companies by country"
          },
          "response": []
        },
        {
          "name": "Filter Companies by City",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jm/company?city=Ho Chi Minh City&country=Vietnam&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jm", "company"],
              "query": [
                {
                  "key": "city",
                  "value": "Ho Chi Minh City",
                  "description": "Filter by city"
                },
                {
                  "key": "country",
                  "value": "Vietnam"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Filter companies by city and country"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Company Details",
      "item": [
        {
          "name": "Get Company by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jm/company/{{companyId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jm", "company", "{{companyId}}"]
            },
            "description": "Retrieve specific company details by ID from JM system"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Account Management (Admin Only)",
      "item": [
        {
          "name": "Activate Company Account",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jm/company/{{accountId}}/activate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jm", "company", "{{accountId}}", "activate"]
            },
            "description": "Activate a company account in JM system (Admin only)"
          },
          "response": []
        },
        {
          "name": "Deactivate Company Account",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jm/company/{{accountId}}/deactivate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "jm", "company", "{{accountId}}", "deactivate"]
            },
            "description": "Deactivate a company account in JM system (Admin only)"
          },
          "response": []
        }
      ]
    }
  ]
}
